<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_waste_container_tree" model="ir.ui.view">
        <field name="name">waste.container.tree</field>
        <field name="model">waste.container</field>
        <field name="arch" type="xml">
            <tree string="Bin List">
                <field name="name"/>
                <field name="status"/>
                <field name="container_type"/>
                <!--                <field name="bin_type"/>-->
                <!--                <field name="tank_volume"/>-->
                <field name="display_info" string="Type / Volume"/>
                <field name="liters_collected"  invisible="container_type  != 'tank'"/>
                <field name="liters_remaining"  invisible="container_type  != 'tank'"/>
                <field name="inUse"/>
                <field name="customer_id"/>
                <field name="pickup_point_id"/>
                <!--                <field name="pickup_point_id" widget="many2many_tags" options="{'color_field': 'color'}"/>-->

            </tree>
        </field>
    </record>

    <record id="view_waste_container_form" model="ir.ui.view">
        <field name="name">waste.container.form</field>
        <field name="model">waste.container</field>
        <field name="arch" type="xml">
            <form string="Bin Form">
                <header>
                    <field name="status" widget="statusbar" status_visible=""/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="0"/>
                        </h1>
                    </div>
                    <group>
                        <field name="product_id" domain="[('type', '=', 'service')]" options="{'no_create': False}" invisible="1"/>
                        <field name="product_id" domain="[('type', '=', 'service')]" options="{'no_create': False}" invisible="1"/>

                        <group>
                            <field name="customer_id"
                                   widget="res_partner_many2one"
                                   context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}"
                                   placeholder="Type to find a customer..."/>
                            <field name="partner_id" invisible="1"/>
                            <field name="pickup_point_id"/>
                            <!--                            <field name="available_pickup_point_ids" invisible="1"/>-->
                            <field name="liters_collected"
                                   invisible="1"/>
                            <field name="liters_remaining" readonly="1"
                                   invisible="1 "/>
                        </group>
                        <group>
                            <field name="status" required="1"/>
                            <field name="container_type" required="1" widget="radio" options="{'horizontal': True}"/>
                            <field name="bin_type" required="1" invisible="container_type != 'bin'"/>
                            <field name="tank_volume" required="1" invisible="container_type != 'tank'"/>
                            <field name="inUse"/>

                        </group>
                    </group>

                </sheet>
                <!--Chatter-->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_waste_container" model="ir.actions.act_window">
        <field name="name">Bin</field>
        <field name="res_model">waste.container</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New Bin
            </p>
        </field>
    </record>
</odoo>